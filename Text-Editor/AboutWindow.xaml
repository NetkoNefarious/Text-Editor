<Window x:Class="Text_Editor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Editor"
        mc:Ignorable="d"
        Title="About" Height="150" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="86*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center">Created by NetkoNefarious</TextBlock>
        <TextBlock Grid.Row="0" Margin="0,15,0,0" HorizontalAlignment="Center">
            <Hyperlink NavigateUri="https://github.com/NetkoNefarious">https://github.com/NetkoNefarious</Hyperlink>
        </TextBlock>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center">Thank you for checking out my software.</TextBlock>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,15,0,0">This is a reimplementation of a text editor</TextBlock>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0,30,0,0">that I've made for practice.</TextBlock>
        <Button Grid.Row="1" Height="25" Width="50" Margin="0, 40, 0, 0" Click="Button_Click">Go back</Button>
    </Grid>
</Window>
